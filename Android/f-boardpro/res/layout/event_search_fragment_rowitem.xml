<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textfield_default"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/contents"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttoncolor" >

        <ImageView
            android:id="@+id/pageImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/profile_pic_white_border"
            android:padding="5dp" />

        <TextView
            android:id="@+id/eventname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pageImage"
            android:padding="5dp"
            android:text="FirstName LastName"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/start_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventname"
            android:layout_toRightOf="@+id/pageImage"
            android:padding="5dp"
            android:text="start end time"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_endtime"
            android:layout_toRightOf="@+id/pageImage"
            android:padding="5dp"
            android:text="Location"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp" />

        <RelativeLayout
            android:id="@+id/likeRlt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/pageImage"
            android:background="@drawable/rectangle_squareedge"
            android:padding="5dp" >

            <TextView
                android:id="@+id/likebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/likeImage"
                android:text="Join"
                android:visibility="gone"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>